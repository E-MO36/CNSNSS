const UI = {
  btnBase:
    "focus-ring inline-flex items-center justify-center gap-2 select-none rounded-2xl font-black uppercase tracking-[0.22em] text-[10px] transition-all duration-200 active:scale-[0.98] disabled:opacity-40 disabled:cursor-not-allowed",
  btnPrimary:
    "bg-gradient-to-r from-purple-500 via-fuchsia-500 to-blue-400 text-black shadow-[0_0_24px_rgba(168,85,247,0.22)] hover:shadow-[0_0_34px_rgba(168,85,247,0.35)]",
  btnGhost:
    "bg-white/5 text-white/85 border border-white/10 hover:bg-white/8 hover:border-white/20",
  btnOutline:
    "bg-black/30 text-white border border-purple-500/40 hover:border-purple-400/70 hover:bg-purple-500/10 shadow-[0_0_18px_rgba(168,85,247,0.14)]",
  chip:
    "inline-flex items-center gap-2 rounded-full px-3 py-1.5 bg-white/5 border border-white/10 text-[10px] font-black uppercase tracking-[0.22em] text-white/65",
  card:
    "rounded-[40px] border border-white/10 bg-zinc-900/55 backdrop-blur-xl shadow-2xl",
  cardSoft:
    "rounded-[28px] border border-white/10 bg-zinc-900/40 backdrop-blur-xl shadow-xl",
};

function clamp(n, min, max) {
  return Math.max(min, Math.min(max, n));
}
function safeParse(json, fallback) {
  try {
    return JSON.parse(json);
  } catch {
    return fallback;
  }
}
function tierLabel(plays) {
  if (plays >= 5000) return "Mythic";
  if (plays >= 2500) return "Platinum";
  if (plays >= 1000) return "Gold";
  if (plays >= 250) return "Silver";
  if (plays >= 50) return "Bronze";
  return "Basic";
}

const Button = ({ variant = "ghost", className = "", ...props }) => {
  const variantClass =
    variant === "primary"
      ? UI.btnPrimary
      : variant === "outline"
      ? UI.btnOutline
      : UI.btnGhost;

  return (
    <button
      {...props}
      className={`${UI.btnBase} ${variantClass} ${className}`}
    />
  );
};

/* -------------------- CUSTOM AVATARS (NOT APPLE EMOJI) -------------------- */
const svgToDataUri = (svg) =>
  `data:image/svg+xml;charset=utf-8,${encodeURIComponent(svg)}`;

const makeAvatarSvg = ({
  bg1,
  bg2,
  stroke = "rgba(255,255,255,0.25)",
  face = "#0B0B0F",
  accent = "#A855F7",
  animal = "robot",
  label = "CNSNSS",
}) => {
  // Simple stylized “robotic woodland” head + headphones (custom vector)
  const head =
    animal === "bear"
      ? `<path d="M70 58c0-18 13-32 30-32s30 14 30 32v18c0 18-13 32-30 32s-30-14-30-32V58z" fill="${face}"/>
         <circle cx="78" cy="58" r="10" fill="${face}"/><circle cx="122" cy="58" r="10" fill="${face}"/>`
      : animal === "fox"
      ? `<path d="M70 70c0-22 14-38 30-38s30 16 30 38v10c0 20-14 36-30 36s-30-16-30-36V70z" fill="${face}"/>
         <path d="M74 58l-14-16 22 2z" fill="${face}"/><path d="M126 58l14-16-22 2z" fill="${face}"/>`
      : animal === "owl"
      ? `<path d="M70 68c0-22 14-36 30-36s30 14 30 36v14c0 20-14 34-30 34s-30-14-30-34V68z" fill="${face}"/>
         <circle cx="82" cy="72" r="10" fill="rgba(255,255,255,0.06)"/><circle cx="118" cy="72" r="10" fill="rgba(255,255,255,0.06)"/>`
      : animal === "deer"
      ? `<path d="M70 70c0-22 14-38 30-38s30 16 30 38v10c0 20-14 36-30 36s-30-16-30-36V70z" fill="${face}"/>
         <path d="M78 44c-8-10-6-18 0-24m44 24c8-10 6-18 0-24" stroke="rgba(255,255,255,0.18)" stroke-width="4" stroke-linecap="round"/>`
      : animal === "raccoon"
      ? `<path d="M70 70c0-22 14-38 30-38s30 16 30 38v10c0 20-14 36-30 36s-30-16-30-36V70z" fill="${face}"/>
         <path d="M72 76c10-10 46-10 56 0" stroke="rgba(255,255,255,0.18)" stroke-width="8" stroke-linecap="round"/>
         <path d="M80 70h14m12 0h14" stroke="rgba(255,255,255,0.22)" stroke-width="6" stroke-linecap="round"/>`
      : animal === "rabbit"
      ? `<path d="M70 70c0-22 14-38 30-38s30 16 30 38v10c0 20-14 36-30 36s-30-16-30-36V70z" fill="${face}"/>
         <path d="M86 44c-10-22 0-34 6-38m22 38c10-22 0-34-6-38" stroke="rgba(255,255,255,0.18)" stroke-width="6" stroke-linecap="round"/>`
      : animal === "wolf"
      ? `<path d="M70 74c0-24 14-42 30-42s30 18 30 42v6c0 22-14 40-30 40s-30-18-30-40v-6z" fill="${face}"/>
         <path d="M74 60l-10-10 20-2z" fill="${face}"/><path d="M126 60l10-10-20-2z" fill="${face}"/>`
      : animal === "dragon"
      ? `<path d="M70 72c0-24 14-42 30-42s30 18 30 42v8c0 22-14 40-30 40s-30-18-30-40v-8z" fill="${face}"/>
         <path d="M80 54c-10-10-12-20-2-30m44 30c10-10 12-20 2-30" stroke="rgba(255,255,255,0.18)" stroke-width="6" stroke-linecap="round"/>
         <path d="M98 28l2-10 6 8" fill="rgba(255,255,255,0.14)"/>`
      : `<rect x="70" y="40" rx="18" ry="18" width="60" height="76" fill="${face}"/>
         <circle cx="84" cy="64" r="8" fill="rgba(255,255,255,0.10)"/>
         <circle cx="116" cy="64" r="8" fill="rgba(255,255,255,0.10)"/>
         <path d="M92 92h16" stroke="rgba(255,255,255,0.18)" stroke-width="6" stroke-linecap="round"/>`;

  const svg = `
  <svg xmlns="http://www.w3.org/2000/svg" width="320" height="320" viewBox="0 0 200 200">
    <defs>
      <linearGradient id="bg" x1="0" y1="0" x2="1" y2="1">
        <stop offset="0" stop-color="${bg1}"/>
        <stop offset="1" stop-color="${bg2}"/>
      </linearGradient>
      <radialGradient id="glow" cx="50%" cy="35%" r="70%">
        <stop offset="0" stop-color="${accent}" stop-opacity="0.35"/>
        <stop offset="1" stop-color="${accent}" stop-opacity="0"/>
      </radialGradient>
      <filter id="soft" x="-20%" y="-20%" width="140%" height="140%">
        <feGaussianBlur stdDeviation="6" />
      </filter>
    </defs>
    <rect x="10" y="10" width="180" height="180" rx="36" fill="url(#bg)"/>
    <circle cx="100" cy="90" r="70" fill="url(#glow)" filter="url(#soft)"/>
    <rect x="18" y="18" width="164" height="164" rx="32" fill="rgba(0,0,0,0.28)" stroke="${stroke}" />

    <!-- Headphones -->
    <path d="M56 94c0-34 20-58 44-58s44 24 44 58" fill="none" stroke="rgba(255,255,255,0.22)" stroke-width="10" stroke-linecap="round"/>
    <rect x="44" y="94" width="18" height="40" rx="9" fill="rgba(255,255,255,0.16)"/>
    <rect x="138" y="94" width="18" height="40" rx="9" fill="rgba(255,255,255,0.16)"/>
    <rect x="47" y="104" width="12" height="22" rx="6" fill="rgba(168,85,247,0.28)"/>
    <rect x="141" y="104" width="12" height="22" rx="6" fill="rgba(59,130,246,0.22)"/>

    <!-- Face -->
    ${head}

    <!-- Accent badge -->
    <rect x="56" y="138" width="88" height="26" rx="13" fill="rgba(0,0,0,0.38)" stroke="rgba(255,255,255,0.14)"/>
    <text x="100" y="155" text-anchor="middle" font-family="ui-sans-serif, system-ui" font-weight="800" font-size="10" fill="rgba(255,255,255,0.72)" letter-spacing="2">${label}</text>
  </svg>`;
  return svgToDataUri(svg);
};

