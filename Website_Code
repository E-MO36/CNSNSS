const App = () => {
  const [isLanding, setIsLanding] = useState(true);
  const [view, setView] = useState("home");
  const [loadingProgress, setLoadingProgress] = useState(0);

  const [selectedChannel, setSelectedChannel] = useState(null);
  const [activeTrack, setActiveTrack] = useState(null);
  const [showVoteOverlay, setShowVoteOverlay] = useState(false);
  const [alignment, setAlignment] = useState(88);

  const [aiPrompt, setAiPrompt] = useState("");
  const [isGenerating, setIsGenerating] = useState(false);
  const [curatedPlaylist, setCuratedPlaylist] = useState(null);

  const [songsPlayed, setSongsPlayed] = useState(() => {
    const saved = localStorage.getItem("cnsnss_plays");
    return saved ? Number(saved) || 0 : 0;
  });

  const [showAvatarVault, setShowAvatarVault] = useState(false);

  const [recentPlays, setRecentPlays] = useState(() => {
    const saved = localStorage.getItem("cnsnss_recent");
    return saved ? safeParse(saved, []) : [];
  });

  const [authMode, setAuthMode] = useState("signin");
  const [auth, setAuth] = useState(() => {
    const saved = localStorage.getItem("cnsnss_user");
    return saved
      ? safeParse(saved, null)
      : {
          isAuthed: false,
          email: "",
          username: "",
          bio: "",
          photoUrl: "", // use avatar by default
          avatarId: "basic_node",
        };
  });

  const visualizerBars = useMemo(() => {
    return Array.from({ length: 100 }).map(() => ({
      h: 20 + Math.random() * 80,
      d: 0.8 + Math.random() * 1.2,
    }));
  }, []);

  useEffect(() => {
    if (isLanding) {
      const interval = setInterval(() => {
        setLoadingProgress((prev) => (prev >= 100 ? 100 : prev + 0.8));
      }, 30);
      return () => clearInterval(interval);
    }
  }, [isLanding]);

  useEffect(() => {
    localStorage.setItem("cnsnss_recent", JSON.stringify(recentPlays));
  }, [recentPlays]);

  useEffect(() => {
    localStorage.setItem("cnsnss_user", JSON.stringify(auth));
  }, [auth]);

  useEffect(() => {
    localStorage.setItem("cnsnss_plays", String(songsPlayed));
  }, [songsPlayed]);

  const handleVoteAction = (type) => {
    setAlignment((prev) =>
      type === "up" ? clamp(prev + 1, 0, 100) : clamp(prev - 2, 0, 100)
    );
  };

  const incrementPlays = () => setSongsPlayed((p) => p + 1);

  const openTrackModal = (track, channel) => {
    incrementPlays();
    setActiveTrack({
      ...track,
      _channelName: channel?.name ?? "AI Stream",
      _genre: channel?.genre ?? "AI",
    });
    setShowVoteOverlay(true);

    const entry = {
      id: `${track.id}-${Date.now()}`,
      title: track.title,
      artist: track.artist,
      img: track.img,
      at: Date.now(),
      channelName: channel?.name ?? "AI Stream",
      genre: channel?.genre ?? "AI",
    };
    setRecentPlays((prev) => [entry, ...prev].slice(0, 12));
  };

  const handleGenerateAI = () => {
    if (!aiPrompt) return;
    setIsGenerating(true);

    setTimeout(() => {
      const tracks = [
        {
          id: "ai-1",
          title: "Neural Drift",
          artist: "Node-Core",
          duration: "3:45",
          img: "https://images.unsplash.com/photo-1614613535308-eb5fbd3d2c17?w=100",
        },
        {
          id: "ai-2",
          title: "Consensus Flow",
          artist: "Algorithmic",
          duration: "4:12",
          img: "https://images.unsplash.com/photo-1508700115892-45ecd05ae2ad?w=100",
        },
        {
          id: "ai-3",
          title: "Synapse Burn",
          artist: "Curation.ai",
          duration: "2:58",
          img: "https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=100",
        },
      ];

      const playlist = {
        id: `ai-${Date.now()}`,
        name: `"${aiPrompt}" Stream`,
        genre: "AI Curated",
        icon: Sparkles,
        activeCount: "Consensus",
        color: "from-purple-600 to-blue-500",
        img: "https://images.unsplash.com/photo-1557682260-96773eb01377?w=700&h=700&fit=crop",
        tracks,
      };

      setCuratedPlaylist(playlist);
      setIsGenerating(false);
    }, 900);
  };

  const openPlaylist = (playlist) => {
    setSelectedChannel(playlist);
    setView("home");
  };

  const mostPlayedGenre = useMemo(() => {
    if (!recentPlays.length) return "—";
    const counts = {};
    for (const r of recentPlays) counts[r.genre] = (counts[r.genre] || 0) + 1;
    return Object.entries(counts).sort((a, b) => b[1] - a[1])[0]?.[0] ?? "—";
  }, [recentPlays]);

  const nextListen = useMemo(() => {
    const ch = GLOBAL_CHANNELS[0];
    if (!recentPlays.length) return { track: ch.tracks[0], channel: ch };
    const lastGenre = recentPlays[0].genre;
    const candidate =
      GLOBAL_CHANNELS.find((c) => c.genre !== lastGenre) || GLOBAL_CHANNELS[0];
    return { track: candidate.tracks[0], channel: candidate };
  }, [recentPlays]);

  const [form, setForm] = useState({
    email: auth.email || "",
    password: "",
    username: auth.username || "",
    bio: auth.bio || "",
    photoUrl: "",
  });

  const submitAuth = () => {
    const username = (form.username || "Node_8492").trim();
    const email = (form.email || "").trim();
    setAuth((prev) => ({
      ...prev,
      isAuthed: true,
      username,
      email,
      bio: form.bio || "",
      photoUrl: form.photoUrl ? form.photoUrl : prev.photoUrl,
    }));
  };

  const signOut = () => {
    setAuth({
      isAuthed: false,
      email: "",
      username: "",
      bio: "",
      photoUrl: "",
      avatarId: "basic_node",
    });
    setForm({ email: "", password: "", username: "", bio: "", photoUrl: "" });
    setAuthMode("signin");
  };

  const currentAvatar = useMemo(
    () => AVATARS.find((x) => x.id === auth.avatarId) || AVATARS[0],
    [auth.avatarId]
  );

  const unlockedCount = useMemo(
    () => AVATARS.filter((a) => songsPlayed >= a.unlockAt).length,
    [songsPlayed]
  );

  const profileImageSrc = useMemo(() => {
    if (auth.photoUrl?.startsWith("http")) return auth.photoUrl;
    return currentAvatar.src;
  }, [auth.photoUrl, currentAvatar]);

  /* -------------------- LANDING -------------------- */
  if (isLanding) {
    return (
      <div className="min-h-screen bg-black text-white font-sans overflow-hidden relative grain vignette">
        <div className="absolute inset-0 flex items-center justify-center gap-[4px] opacity-25 pointer-events-none w-full h-full">
          {visualizerBars.map((bar, i) => (
            <div
              key={i}
              className="flex-1 max-w-[4px] bg-gradient-to-t from-purple-950 via-purple-600 to-blue-400 rounded-full animate-vibe-infinite"
              style={{
                height: `${bar.h}%`,
                animationDelay: `-${(i * 0.1) % 2}s`,
                animationDuration: `${bar.d}s`,
              }}
            />
          ))}
        </div>

        <div className="min-h-screen flex flex-col items-center justify-center relative z-10">
          <div className="text-center space-y-12 max-w-sm w-full px-6">
            <div className="relative">
              <div className="absolute inset-0 bg-purple-500/18 blur-[140px] rounded-full animate-pulse" />
              <img
                src={LOGO_LANDING}
                alt="CNSNSS"
                className="w-72 mx-auto relative z-10 animate-float-slow drop-shadow-[0_0_30px_rgba(168,85,247,0.6)] rounded-3xl"
                draggable={false}
              />
            </div>

            <div className="space-y-6">
              <div className="w-full h-[2px] bg-white/5 rounded-full overflow-hidden">
                <div
                  className="h-full bg-gradient-to-r from-purple-600 via-blue-400 to-purple-600 shadow-[0_0_15px_rgba(168,85,247,0.55)] transition-all duration-300"
                  style={{ width: `${loadingProgress}%` }}
                />
              </div>
              <div className="flex justify-between items-center text-[10px] font-black tracking-[0.5em] text-white/30 uppercase">
                <span className="animate-pulse">Establishing Node Connection</span>
                <span>{Math.floor(loadingProgress)}%</span>
              </div>
            </div>

            <Button
              variant="primary"
              disabled={loadingProgress < 100}
              onClick={() => setIsLanding(false)}
              className={`w-full py-6 rounded-full border border-white/10 ${
                loadingProgress >= 100
                  ? "opacity-100"
                  : "opacity-0 translate-y-10 pointer-events-none"
              }`}
            >
              <ShieldCheck size={16} />
              Initialize CNSNSS
            </Button>

            <div className="flex items-center justify-center gap-3">
              <span className={UI.chip}>
                <Cpu size={14} />
                NODE-SAFE UI
              </span>
              <span className={UI.chip}>
                <Gift size={14} />
                REWARD VAULT
              </span>
            </div>
          </div>
        </div>

        <GlobalStyles />
      </div>
    );
  }

  /* -------------------- APP -------------------- */
  return (
    <div className="h-screen bg-[#050505] text-white font-sans flex flex-col overflow-hidden selection:bg-purple-500/30 grain vignette">
      <div className="fixed inset-0 pointer-events-none z-0">
        <div className="absolute top-[-12%] right-[-8%] w-[52%] h-[52%] bg-purple-600/6 rounded-full blur-[160px]" />
        <div className="absolute bottom-[-10%] left-[-8%] w-[38%] h-[38%] bg-blue-600/6 rounded-full blur-[140px]" />
      </div>

      <header className="relative z-50 flex items-center justify-between px-8 py-6 backdrop-blur-xl bg-black/40 border-b border-white/5">
        <div
          className="flex items-center gap-4 group cursor-pointer"
          onClick={() => {
            setView("home");
            setSelectedChannel(null);
          }}
        >
          <img
            src={LOGO_URL}
            className="h-10 w-auto brightness-200 transition-all group-hover:scale-105"
            alt="CNSNSS"
            draggable={false}
          />
          <div className="h-6 w-[1px] bg-white/10 mx-1" />
          <div className="flex flex-col">
            <span className="text-[10px] font-black tracking-[0.3em] text-white/40 uppercase">
              Public Node
            </span>
            <div className="flex items-center gap-1.5">
              <div className="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse" />
              <span className="text-[9px] font-bold text-white/60 tracking-wider uppercase">
                Live
              </span>
            </div>
          </div>
        </div>

        <div className="flex items-center gap-8">
          <button
            className="focus-ring text-white/40 hover:text-white transition-colors"
            aria-label="Search"
            type="button"
          >
            <Search size={20} />
          </button>

          <div
            onClick={() => {
              setView("profile");
              setShowAvatarVault(true);
            }}
            className="h-10 w-10 rounded-full bg-gradient-to-tr from-purple-600 to-blue-500 p-[1.5px] cursor-pointer hover:scale-110 transition-transform shadow-[0_0_12px_rgba(168,85,247,0.28)]"
            role="button"
            tabIndex={0}
            onKeyDown={(e) => e.key === "Enter" && setShowAvatarVault(true)}
            title="Avatar Vault"
          >
            <div className="h-full w-full rounded-full bg-black flex items-center justify-center border border-white/10 overflow-hidden">
              <img
                src={profileImageSrc}
                className="opacity-95 w-full h-full object-cover"
                alt="Profile"
                draggable={false}
              />
            </div>
          </div>
        </div>
      </header>

      <main className="flex-1 overflow-y-auto custom-scrollbar relative z-10 px-8 pb-44 pt-4">
        {view === "home" && !selectedChannel && (
          <div className="max-w-7xl mx-auto space-y-12 animate-in fade-in slide-in-from-bottom-6 duration-700">
            <div className="space-y-2">
              <span className="text-[10px] font-black tracking-[0.5em] text-purple-500 uppercase">
                Sound Algorithm
              </span>
              <h2 className="text-4xl font-black tracking-tighter">
                Top Channels
              </h2>
              <p className="text-white/40 text-sm max-w-2xl">
                Tap a node to stream. Every play increases your vault progress
                and unlocks new avatars.
              </p>

              <div className="flex flex-wrap items-center gap-3 pt-3">
                <span className={UI.chip}>
                  <Gift size={14} />
                  Songs Played: {songsPlayed}
                </span>
                <span className={UI.chip}>
                  <ShieldCheck size={14} />
                  Tier: {tierLabel(songsPlayed)}
                </span>
                <button
                  className={`${UI.chip} hover:bg-white/10 transition-colors`}
                  type="button"
                  onClick={() => {
                    setView("profile");
                    setShowAvatarVault(true);
                  }}
                >
                  <Sparkles size={14} />
                  Avatar Vault ({unlockedCount}/{AVATARS.length})
                </button>
              </div>
            </div>

            <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
              {GLOBAL_CHANNELS.map((channel, idx) => (
                <div
                  key={channel.id}
                  onClick={() => setSelectedChannel(channel)}
                  className="group relative bg-zinc-900/45 hover:bg-zinc-800/60 border border-white/5 rounded-2xl overflow-hidden transition-all duration-500 p-5 hover:-translate-y-2 cursor-pointer shadow-xl"
                  style={{ animationDelay: `${idx * 100}ms` }}
                >
                  <div className="relative aspect-square rounded-xl overflow-hidden mb-5 bg-black">
                    {/* fallback background so it never looks empty */}
                    <div className="absolute inset-0 bg-gradient-to-br from-white/5 to-black/40" />
                    <img
                      src={channel.img}
                      referrerPolicy="no-referrer"
                      className="absolute inset-0 w-full h-full object-cover opacity-70 group-hover:opacity-100 group-hover:scale-110 transition-all duration-700"
