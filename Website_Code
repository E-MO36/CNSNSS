                    <div className="absolute inset-0 flex items-center justify-center">
                      <channel.icon
                        size={48}
                        className="text-white drop-shadow-2xl opacity-85 group-hover:opacity-100 transition-all"
                      />
                    </div>
                  </div>

                  <div className="flex items-center justify-between gap-3">
                    <h3 className="text-xl font-black tracking-tight">
                      {channel.name}
                    </h3>
                    <span className="text-[10px] font-black tracking-[0.25em] text-white/35 uppercase">
                      {channel.genre}
                    </span>
                  </div>

                  <p className="text-[10px] font-black tracking-widest text-white/30 uppercase mt-1">
                    {channel.activeCount} Synchronized
                  </p>
                </div>
              ))}
            </div>
          </div>
        )}

        {selectedChannel && (
          <div className="max-w-5xl mx-auto animate-in fade-in slide-in-from-right-8 duration-500">
            <Button
              variant="ghost"
              onClick={() => setSelectedChannel(null)}
              className="mb-8 px-4 py-3 rounded-full"
              type="button"
            >
              <ChevronLeft size={18} />
